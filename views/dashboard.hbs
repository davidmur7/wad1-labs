{{> menu id="dashboard"}}

<section class="ui left aligned middle aligned segment">
  
  <h2>Playlist App Dashboard</h2>
  
  {{#unless playlists}}
    <h3 class="ui message">
      Start adding your playlists!
    </h3>
  {{/unless}}

  {{#each playlists}}
    <section class="ui left aligned middle aligned segment">

      <h3 class="ui header">
        {{title}}
      </h3>

  {{#if songs.length}} 
  <p>Total Songs: {{songs.length}}</p> 
        <a href="/playlist/{{id}}">
      <i class="folder open outline black icon"></i>
      </a>
  {{else}} <p>Empty Playlist!</p> {{/if}}




    </section>
  {{/each}}

</section>
